<!DOCTYPE html>
<html>
  <head>
    <title>ProfileApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>


  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <ul class="nav navbar-nav navbar-left">
          <% if current_user %>
            <li><span class="nav-text"><%= current_user.email %></span></li>
          <% end %>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if current_user %>
            <%= button_to "Sign Out", destroy_user_session_path, method: :delete,  :class => 'navbar-link'  %>           
          <% else %>
            <li><a href="/users/sign_up"><span class="glyphicon glyphicon-user"></span> Sign_Up</a></li>
            <li><a href="/users/sign_in"><span class="glyphicon glyphicon-log-in"></span> Login</a></li> 
          <% end %>
        </ul>
      </div>
    </nav>
    <div class="container">
      <% flash.each do |name, msg| %>
        <%#= content_tag(:div, class: "alert #{flash_class(name)}")  do %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <%= msg %>
        <%# end %>
      <% end %>
    <%= yield %>
  </body>
</html>
