<h2>Registration</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

   <div class="form-group">
      <%= f.label :First_name %><br />
      <%= f.text_field :first_name, autofocus: true, class: 'form-control', placeholder: 'First Name', :required => true %>
    </div>

    <div class="form-group">
      <%= f.label :Last_name %><br />
      <%= f.text_field :last_name, autofocus: true, class: 'form-control', placeholder: 'Last Name', :required => true %>
    </div>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email', autocomplete: "email" %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "password_confirmation", class: 'form-control', placeholder: 'password' %>
    </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'password-confirmation', autocomplete: "password_confirmation" %>
  </div>


    <div class="form-group">
      <%= f.label :gender, 'Gender' %><br>
      <%= f.radio_button :gender, 'Male', :checked => true %> 
        <%= label :Male, 'Male' %>
        <%= f.radio_button :gender, 'female' %>
        <%= label :Female, 'Female' %>
    </div>

    <div class="form-group">
      <%= f.label :City %><br />
      <%= f.text_field :city, autofocus: true, class: 'form-control', placeholder: 'City', :required => true %>
    </div>

    <div class="form-group">
      <%= f.label :State %><br />
      <%#= f.collection_select :state, State.order(:name),:id,:name, include_blank: true %>
      <%= f.select :state, State.all.collect {|c| [ c.name] } %>
    </div>

    <div class="form-group">
      <%= f.label :Zip %><br />
      <%= f.text_field :zip, autofocus: true, class: 'form-control', placeholder: 'zip', :required => true %>
    </div>
    <div class="form-group">
      <%= f.label :Country %><br />
      <%= f.select :country, Country.all.collect {|c| [ c.name] } %>
    </div>

    <div class="form-group">
        <%#= f.collection_check_boxes :name, AreaOfInterest.all, :id, :name do |b| %>
        <%#= f.check_boxes :name, AreaOfInterest.all, :id, :name do |b| %>
        <%= collection_check_boxes(:name, :area_of_interest_ids, AreaOfInterest.all, :id, :name_with_initial) %>
    </div>

    <div class = "col-md-offset-5>
      <div class="form-group">
        <%= link_to "Back", :back, class: "btn btn-danger btn-sm" %>
        <%= f.submit "Submit", class: "btn btn-primary btn-sm"%>
      </div>
<% end %>

<%= render "users/shared/links" %>
