<div class='container-fluid'>
      <p id="notice"><%= notice %></p>
      <div class='row py-3 px-3'>
        <div class='col-12 col-sm-8'>
          <h3 class=''>Registered users</h3>
          <table id='profile-table' class="table table-hover">
            <thead  class="thead-light">
              <tr>
                <th>Index</th>
                <th>First Name</th>
                <th colspan="3">Last Name</th>
                <th>Email</th>
                <th>Gender</th>
                <th>City</th>
                <th>Country</th>
                <th>State</th>
                <th>Zip</th>
                <th colspan="3">Area of Interest</th>
                <th>Edit User</th>

              </tr>
            </thead>
    
            <tbody>
              <% @users.each_with_index do |user, index| %>
                <tr>
                  <div id="user-<%=user.id%>">
                  <td><%= index = index+1 %></td>
                  <td><%= user.first_name %></td>
                  <td colspan="3"><%= user.last_name %></td>
                  <td><%= user.email %></td>
                  <td><%= user.gender %></td>
                  <td><%= user.city %></td>
                  <td><%= user.country %></td>
                  <td><%= user.state %></td>
                  <td><%= user.zip %></td>
                  <td colspan="3"><%= user.area_of_interests.each do |int | %>
                  	               <%= int.name%>
                  	              <% end %>
                  </td>
                  <td colspan="3">
                  <%= link_to 'Edit', edit_user_registration_path(@user), :class=>"glyphicon glyphicon-pencil", data: {id: user} %></td>
                  
                </tr>
                </div>
              <% end %>
            </tbody>
          </table>
          <br>
        </div>
      </div>
    </div>

<%= link_to "Back", :back %>